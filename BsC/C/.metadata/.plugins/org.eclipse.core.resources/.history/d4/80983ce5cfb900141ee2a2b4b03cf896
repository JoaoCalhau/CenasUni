#include "Konsole.h"

#ifdef WIN32
#include <iostream>
#include <windows.h>

console::Console()
{
AllocConsole();
freopen("conin$", "r", stdin);
freopen("conout$", "w", stdout);
freopen("conout$", "w", stderr);
}

console::~Console()
{
fclose(stdin);
fclose(stdout);
fclose(stderr);
FreeConsole();
}
#endif
